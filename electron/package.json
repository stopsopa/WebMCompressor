{
  "name": "webmcompressor",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stopsopa/webmcompressor.git"
  },
  "version": "1.0.0",
  "description": "High-efficiency WebM video compressor using two-pass encoding.",
  "author": "stopsopa",
  "type": "module",
  "main": "dist-electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "electron:dev": "wait-on tcp:5173 && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently \"npm run vite:dev\" \"npm run electron:dev\"",
    "lint": "eslint .",
    "build": "tsc -b && vite build && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json"
  },
  "build": {
    "appId": "com.stopsopa.webmcompressor",
    "productName": "WebMCompressor",
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "public/icon.png",
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extraResources": [
        "bin"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extraResources": [
        "bin"
      ],
      "artifactName": "${productName}-${version}-${arch}-setup.${ext}",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "setup.json"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "semantic-release": "^25.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
